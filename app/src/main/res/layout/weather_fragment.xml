<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/weather_sw_rf"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekly_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/today_rv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/today_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/today_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:id="@+id/today_txt"
                    android:text="@string/today"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/alegreya_sans_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/brief_information_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"/>
            <RelativeLayout
                    android:id="@+id/brief_information_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/today_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                        android:id="@+id/rain_possibility_container"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/brief_layout"
                        android:backgroundTint="@color/very_light_blue">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/rain_icon"
                            android:contentDescription="@string/image_description"/>
                    <TextView
                            android:id="@+id/rain_possibility_txt"
                            android:text="12"
                            android:textSize="24sp"
                            android:textColor="@color/light_blue"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@color/light_blue"
                            android:text="@string/percentage"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/wind_speed_container"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/brief_layout"
                        android:backgroundTint="@color/very_light_pink" android:layout_centerInParent="true">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wind_icon"
                            android:contentDescription="@string/image_description"/>
                    <TextView
                            android:id="@+id/wind_speed_txt"
                            android:textSize="24sp"
                            android:textColor="@color/light_pink"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@color/light_pink"
                            android:text="@string/speed_unit"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/humidity_rate_container"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/brief_layout"
                        android:backgroundTint="@color/very_light_purple"
                        tools:ignore="RelativeOverlap">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/humidity_icon"
                            android:contentDescription="@string/image_description"/>
                    <TextView
                            android:id="@+id/humidity_rate_txt"
                            android:textSize="24sp"
                            android:textColor="@color/light_purple"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:textSize="20sp"
                            android:textColor="@color/light_purple"
                            android:text="@string/percentage"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/today_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp">
                <LinearLayout
                        android:id="@+id/title_temperature_container"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/weather_status_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/city_name_txt"
                            android:textColor="@color/black"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                    <TextView
                            android:id="@+id/country_name_txt"
                            android:textColor="@color/black"
                            android:fontFamily="@font/alegreya_sans_bold"
                            android:includeFontPadding="false"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/temperature_txt"
                                android:includeFontPadding="false"
                                android:textColor="@color/black"
                                android:textSize="96sp"
                                android:fontFamily="@font/alegreya_sans_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                        />
                        <TextView
                                android:id="@+id/temperature_unit_txt"
                                android:fontFamily="@font/alegreya_sans_medium"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:includeFontPadding="false"
                                android:gravity="center|top"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                        />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                        android:id="@+id/weather_status_img"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="40dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/image_description"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>