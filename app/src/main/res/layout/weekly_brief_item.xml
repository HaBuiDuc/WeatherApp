<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">
    <TextView
            android:id="@+id/days_of_week_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/weekly_brief_status_img"
            android:layout_centerVertical="true"
    />
    <ImageView
            android:id="@+id/weekly_brief_status_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image_description"
            android:layout_centerInParent="true"
            android:src="@drawable/cloud_day_img"
            android:layout_centerVertical="true"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/weekly_brief_status_img"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
    >
        <TextView
                android:id="@+id/weekly_brief_temperature_txt"
                android:textAlignment="textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_medium"
                android:textColor="@color/black"
                android:textSize="18sp"

        />
        <TextView
                android:text="@string/celsius_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
        />
    </LinearLayout>
</RelativeLayout>